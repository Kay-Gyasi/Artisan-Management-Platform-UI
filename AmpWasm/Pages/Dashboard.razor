@page "/dashboard"
@inject NavigationService Navigator
@inject AuthService AuthStateService
@attribute [Authorize]
<PageTitle>Dashboard</PageTitle>

<!--begin::Row-->
<div class="row g-5 g-xl-8">
	<AuthorizeView Roles="Artisan">
		<div class="col-xl-4">
			<!--begin::Statistics Widget 5-->
			<a @onclick="Navigator.NavigateToArtisanProfileOverview" class="card bg-body-white hoverable card-xl-stretch mb-xl-8">
				<!--begin::Body-->
				<div class="card-body">
					<!--begin::Svg Icon | path: icons/duotune/ecommerce/ecm002.svg-->
					<span class="svg-icon svg-icon-primary svg-icon-3x ms-n1">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-person-circle" viewBox="0 0 16 16">
							<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
							<path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
						</svg>
					</span>
					<!--end::Svg Icon-->
					<div class="text-gray-900 fw-bolder fs-2 mb-2 mt-5">Profile</div>
					<div class="fw-bold text-gray-400">Overview, Personal Settings, Business Settings</div>
				</div>
				<!--end::Body-->
			</a>
            <!--end::Statistics Widget 5-->		
        </div>

        <div class="col-xl-4">
				<!--begin::Statistics Widget 5-->
				<a @onclick="Navigator.NavigateToArtisanSchedule" class="card bg-dark hoverable card-xl-stretch mb-5 mb-xl-8">
					<!--begin::Body-->
					<div class="card-body">
						<!--begin::Svg Icon | path: icons/duotune/arrows/arr070.svg-->
						<span class="svg-icon svg-icon-gray-100 svg-icon-3x ms-n1">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-calendar-date" viewBox="0 0 16 16">
								<path d="M6.445 11.688V6.354h-.633A12.6 12.6 0 0 0 4.5 7.16v.695c.375-.257.969-.62 1.258-.777h.012v4.61h.675zm1.188-1.305c.047.64.594 1.406 1.703 1.406 1.258 0 2-1.066 2-2.871 0-1.934-.781-2.668-1.953-2.668-.926 0-1.797.672-1.797 1.809 0 1.16.824 1.77 1.676 1.77.746 0 1.23-.376 1.383-.79h.027c-.004 1.316-.461 2.164-1.305 2.164-.664 0-1.008-.45-1.05-.82h-.684zm2.953-2.317c0 .696-.559 1.18-1.184 1.18-.601 0-1.144-.383-1.144-1.2 0-.823.582-1.21 1.168-1.21.633 0 1.16.398 1.16 1.23z"/>
								<path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
							</svg>
						</span>
						<!--end::Svg Icon-->
						<div class="text-gray-100 fw-bolder fs-2 mb-2 mt-5">Schedule</div>
						<div class="fw-bold text-white">View your job schedule</div>
					</div>
					<!--end::Body-->
				</a>
				<!--end::Statistics Widget 5-->
			</div>
	</AuthorizeView>
    <AuthorizeView Roles="Customer">
        <div class="col-xl-4">
            <!--begin::Statistics Widget 5-->
            <a @onclick="Navigator.NavigateToAddOrder" class="card bg-body-white hoverable card-xl-stretch mb-xl-8">
                <!--begin::Body-->
                <div class="card-body">
                    <!--begin::Svg Icon | path: icons/duotune/ecommerce/ecm002.svg-->
                    <span class="svg-icon svg-icon-primary svg-icon-3x ms-n1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#0096FF" class="bi bi-bag-plus-fill" viewBox="0 0 16 16">
                          <path fill-rule="evenodd" d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5v-.5zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0zM8.5 8a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V12a.5.5 0 0 0 1 0v-1.5H10a.5.5 0 0 0 0-1H8.5V8z"/>
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                    <div class="text-gray-900 fw-bolder fs-2 mb-2 mt-5">Place Order</div>
                    <div class="fw-bold text-gray-400">Place a new job order</div>
                </div>
                <!--end::Body-->
            </a>
            <!--end::Statistics Widget 5-->		
        </div>
        <div class="col-xl-4">
            <!--begin::Statistics Widget 5-->
            <a @onclick="Navigator.NavigateToCustomerOrderList" class="card bg-primary hoverable card-xl-stretch mb-xl-8">
                <!--begin::Body-->
                <div class="card-body">
                    <!--begin::Svg Icon | path: icons/duotune/general/gen008.svg-->
                    <span class="svg-icon svg-icon-white svg-icon-3x ms-n1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M3 2H10C10.6 2 11 2.4 11 3V10C11 10.6 10.6 11 10 11H3C2.4 11 2 10.6 2 10V3C2 2.4 2.4 2 3 2Z" fill="black"/>
                            <path opacity="0.3" d="M14 2H21C21.6 2 22 2.4 22 3V10C22 10.6 21.6 11 21 11H14C13.4 11 13 10.6 13 10V3C13 2.4 13.4 2 14 2Z" fill="black"/>
                            <path opacity="0.3" d="M3 13H10C10.6 13 11 13.4 11 14V21C11 21.6 10.6 22 10 22H3C2.4 22 2 21.6 2 21V14C2 13.4 2.4 13 3 13Z" fill="black"/>
                            <path opacity="0.3" d="M14 13H21C21.6 13 22 13.4 22 14V21C22 21.6 21.6 22 21 22H14C13.4 22 13 21.6 13 21V14C13 13.4 13.4 13 14 13Z" fill="black"/>
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                    <div class="text-white fw-bolder fs-2 mb-2 mt-5">My Orders</div>
                    <div class="fw-bold text-white">View all your placed orders</div>
                </div>
                <!--end::Body-->
            </a>
            <!--end::Statistics Widget 5-->
        </div>
    </AuthorizeView>
</div>
<!--end::Row-->

@code{

    protected override async Task OnInitializedAsync()
    {
        await AuthStateService.CheckAuthStatus();
    }
}